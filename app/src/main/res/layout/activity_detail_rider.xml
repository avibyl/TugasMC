<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRider">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/blackgray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kembali"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-150dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp">

            <ImageView
                android:id="@+id/iDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                app:srcCompat="@drawable/fb1" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="50dp">

            <TextView
                android:id="@+id/dDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Francesco"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/bDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-23dp"
                android:fontFamily="@font/anton"
                android:text="Bagnaia"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/acme"
                android:text="Ducati Lenovo Team"
                android:layout_marginTop="-10dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/decDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/alata"
                    android:layout_marginTop="20dp"
                    android:text="Deskripsi"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>