<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="809dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-35dp"
        android:layout_marginTop="-22dp"
        android:layout_marginBottom="-48dp"
        app:srcCompat="@drawable/gojobg"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/klogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/kemail"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/klogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="65dp"
        android:background="#303134"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="20dp"
        android:hint="Email"
        android:padding="20dp"
        android:textColorHint="@color/white"
        tools:ignore="Autofill,TextFields" />

    <EditText
        android:id="@+id/kpassword"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_below="@id/klogin"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="20dp"
        android:background="#303134"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:padding="20dp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="179dp"
        android:layout_height="38dp"
        android:layout_below="@+id/kpassword"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="@color/teal_700"
        android:backgroundTintMode="add"
        android:text="LOGIN"
        android:textColorHighlight="#2196F3"
        android:textColorHint="#673AB7"
        android:textColorLink="@color/purple_200"
        app:rippleColor="@color/purple_200" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="115dp"
        android:layout_marginBottom="252dp"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="@color/teal_200"
        android:text="REGISTER"
        tools:ignore="TouchTargetSizeCheck" />


</RelativeLayout>